<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire candidature -->
        <record id="view_ong_application_form" model="ir.ui.view">
            <field name="name">ong.application.form</field>
            <field name="model">ong.application</field>
            <field name="arch" type="xml">
                <form string="Candidature ONG">
                    <header>
                        <button name="action_submit" type="object" 
                                string="Soumettre" invisible="state!='draft'" 
                                class="btn-primary"/>
                        <button name="action_review" type="object" 
                                string="En revision" invisible="state!='submitted'" 
                                class="btn-secondary" groups="recrutement_ongs.group_ong_manager"/>
                        <button name="action_select" type="object" 
                                string="Sélectionner" invisible="state!='under_review'" 
                                class="btn-success" groups="recrutement_ongs.group_ong_manager"/>
                        <button name="action_reject" type="object" 
                                string="Rejeter" invisible="state!='under_review'" 
                                class="btn-danger" groups="recrutement_ongs.group_ong_manager"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'ONG"/>
                            </h1>
                            <h2>
                                <field name="campaign_id" options="{'no_create': True}"/>
                            </h2>
                        </div>
                        
                        <group>
                            <group string="Informations de Contact">
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="website"/>
                            </group>
                            <group string="Score">
                                <field name="total_score" readonly="1"/>
                                <field name="submission_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Informations Générales">
                                <group>
                                    <group string="Adresse">
                                        <field name="street"/>
                                        <field name="city"/>
                                        <field name="country_id"/>
                                    </group>
                                    <group string="Statut Légal">
                                        <field name="registration_number"/>
                                        <field name="legal_status"/>
                                    </group>
                                </group>
                                
                                <group string="Domaines d'Activité">
                                    <field name="activity_domains" widget="many2many_tags"/>
                                    <field name="main_activities"/>
                                </group>
                            </page>
                            
                            <page string="Informations Financières">
                                <group>
                                    <field name="annual_budget"/>
                                    <field name="funding_sources"/>
                                </group>
                            </page>
                            
                            <page string="Ressources Humaines">
                                <group>
                                    <field name="staff_count"/>
                                    <field name="volunteer_count"/>
                                </group>
                            </page>
                            
                            <page string="Expérience">
                                <group>
                                    <field name="years_experience"/>
                                    <field name="previous_projects"/>
                                    <field name="references"/>
                                </group>
                            </page>
                            
                            <page string="Documents">
                                <group>
                                    <field name="statute_document" filename="statute_filename"/>
                                    <field name="certificate_document" filename="certificate_filename"/>
                                    <field name="financial_report" filename="financial_filename"/>
                                </group>
                            </page>
                            
                            <page string="Évaluation">
                                <field name="evaluation_ids">
                                    <tree editable="bottom">
                                        <field name="criterion_id"/>
                                        <field name="score"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Vue liste candidature -->
        <record id="view_ong_application_tree" model="ir.ui.view">
            <field name="name">ong.application.tree</field>
            <field name="model">ong.application</field>
            <field name="arch" type="xml">
                <tree decoration-success="state=='selected'" 
                      decoration-danger="state=='rejected'"
                      decoration-warning="state=='under_review'">
                    <field name="name"/>
                    <field name="campaign_id"/>
                    <field name="email"/>
                    <field name="years_experience"/>
                    <field name="annual_budget"/>
                    <field name="total_score"/>
                    <field name="submission_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- Vue Kanban améliorée pour les applications -->
        <record id="view_ong_application_kanban_enhanced" model="ir.ui.view">
            <field name="name">ong.application.kanban.enhanced</field>
            <field name="model">ong.application</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="country_id"/>
                    <field name="total_score"/>
                    <field name="state"/>
                    <field name="campaign_id"/>
                    <field name="activity_domains"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_title">
                                            <span class="badge badge-pill badge-info">
                                                Score: <field name="total_score"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="email"/>
                                        <br/>
                                        <span t-if="record.country_id.value">
                                            <i class="fa fa-globe"/> <field name="country_id"/>
                                        </span>
                                        <br/>
                                        <strong>Campagne:</strong> <field name="campaign_id"/>
                                        <br/>
                                        <div class="text-muted" t-if="record.activity_domains.raw_value.length">
                                            <i class="fa fa-tags"/>
                                            <t t-foreach="record.activity_domains.raw_value.slice(0,2)" t-as="domain_id">
                                                <span class="badge badge-light mr-1">
                                                    <t t-esc="domain_id"/>
                                                </span>
                                            </t>
                                            <span t-if="record.activity_domains.raw_value.length > 2">
                                                +<t t-esc="record.activity_domains.raw_value.length - 2"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Actions rapides sur les listes -->
        <record id="action_export_applications_excel" model="ir.actions.server">
            <field name="name">Exporter en Excel</field>
            <field name="model_id" ref="model_ong_application"/>
            <field name="binding_model_id" ref="model_ong_application"/>
            <field name="binding_type">action</field>
            <field name="state">code</field>
            <field name="code">
if records:
    wizard = env['ong.export.wizard'].create({
        'export_type': 'applications',
    })
    action = wizard.with_context(active_ids=records.ids).export_excel()
    action = action
            </field>
        </record>

         <!-- Actions système -->
        <record id="action_server_auto_evaluate" model="ir.actions.server">
            <field name="name">Évaluer automatiquement</field>
            <field name="model_id" ref="model_ong_application"/>
            <field name="binding_model_id" ref="model_ong_application"/>
            <field name="binding_type">action</field>
            <field name="state">code</field>
            <field name="groups_id" eval="[(4, ref('group_ong_manager'))]"/>
            <field name="code">
for record in records:
    if record.state == 'submitted':
        record._auto_evaluate()
            </field>
        </record>
        
        <!-- Action candidature -->
        <record id="action_ong_application" model="ir.actions.act_window">
            <field name="name">Candidatures ONGs</field>
            <field name="res_model">ong.application</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>
    </data>
</odoo>