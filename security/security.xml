<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Groupe pour la gestion des recrutements ONG -->
        <record id="group_ong_recruitment_manager" model="res.groups">
            <field name="name">ONG Recruitment Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>
        
        <!-- Règles de sécurité -->
        <record id="ong_application_rule_own" model="ir.rule">
            <field name="name">ONG Applications: own applications</field>
            <field name="model_id" ref="model_ong_application"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>