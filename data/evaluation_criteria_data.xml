<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Critères d'évaluation standard pour les ONGs -->
        <record id="criteria_experience" model="ong.evaluation.criteria">
            <field name="name">Expérience</field>
            <field name="code">experience</field>
            <field name="description">Nombre d'années d'expérience de l'ONG</field>
            <field name="max_score">25.0</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="criteria_budget" model="ong.evaluation.criteria">
            <field name="name">Capacité Financière</field>
            <field name="code">budget</field>
            <field name="description">Budget annuel et sources de financement</field>
            <field name="max_score">20.0</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="criteria_staff" model="ong.evaluation.criteria">
            <field name="name">Ressources Humaines</field>
            <field name="code">staff</field>
            <field name="description">Nombre d'employés et de bénévoles</field>
            <field name="max_score">15.0</field>
            <field name="sequence">30</field>
        </record>
        
        <record id="criteria_documents" model="ong.evaluation.criteria">
            <field name="name">Documents Légaux</field>
            <field name="code">documents</field>
            <field name="description">Statuts, certificats et rapports financiers</field>
            <field name="max_score">20.0</field>
            <field name="sequence">40</field>
        </record>
        
        <record id="criteria_completeness" model="ong.evaluation.criteria">
            <field name="name">Complétude du Dossier</field>
            <field name="code">completeness</field>
            <field name="description">Qualité et complétude des informations fournies</field>
            <field name="max_score">20.0</field>
            <field name="sequence">50</field>
        </record>
    </data>
</odoo>